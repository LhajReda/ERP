{
  "name": "fla7a-erp",
  "version": "1.0.0",
  "private": true,
  "description": "FLA7A ERP - Systeme ERP agricole 100% marocain",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "gate": "pnpm lint && pnpm test && pnpm build",
    "gate:web:e2e": "pnpm --filter web test:e2e",
    "dev:api": "turbo dev --filter=api",
    "dev:web": "turbo dev --filter=web",
    "db:migrate": "pnpm --filter database prisma migrate dev",
    "db:push": "pnpm --filter database prisma db push",
    "db:seed": "pnpm --filter database prisma db seed",
    "db:studio": "pnpm --filter database prisma studio",
    "db:generate": "pnpm --filter database prisma generate",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "clean": "turbo clean && rimraf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "prettier": "^3.4.0",
    "rimraf": "^6.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
